<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie-edge,Chome=1">
    <title>@ViewData["Title"] </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/base.css" />
    <link rel="stylesheet" href="~/css/homepage.css" />
    <link rel="stylesheet" href="~/css/info.css" />
    <link rel="shortcut icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    <link rel="stylesheet" href="https://use.typekit.net/uvc4mzv.css">

    <!-- FONT AWESOME SCRIPT -->
    <script src="https://kit.fontawesome.com/1719fcf850.js" crossorigin="anonymous"></script>
    <!--SRCs for Log Out Modal-->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

    <script type="text/javascript" src='~/js/old_psits_script.js'></script>

</head>

<body>

    <!-- The Modal -->
    <div class="modal" id="logoutModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Log Out</h4>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    Do you really want to log out?
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <a href="/PSITS@Logout">YES</a>
                    <a data-dismiss="modal">NO</a>
                </div>

            </div>
        </div>
    </div>


    <div class="banner">
        <nav>
            <div class="logo">
                <img src='~/images/uc.png' style="cursor: pointer;"
                     onclick="location.href='/'">
                <img src='~/images/CCS_LOGO.png' style="cursor: pointer;"
                     onclick="location.href='/'">
                <img src='~/images/PSITS_LOGO.png' style="cursor: pointer;"
                     onclick="location.href='/'">
                <h1 class="headerLong">Philippine Society of Information Technology Students</h1>
                <h1 class="headerShort">PSITS</h1>
            </div>
            <input type="checkbox" id="click">
            <label for="click" class="menu-btn">
                <i class="fas fa-bars"></i>
            </label>
            <ul>
                

                <li><p><i class="fa-solid fa-circle-user"></i> ACCOUNT | </p></li>
                
                <li><a href="#">HOME</a></li>
                <li><a href="#">ABOUT US</a></li>
                <li><a href="#">MERCH</a></li>
                <li><a href="#">FACULTY</a></li>
                <li><hr class="bannerLine" style="display:none;"></li>

                <li style="display: block"><a onclick="location.href='/PSITS@Login'" style="cursor:pointer;">LOG IN</a></li>
                <li style="display: block"><a data-toggle="modal" data-target="#logoutModal" style="cursor:pointer;">LOG OUT</a></li>
            </ul>
        </nav>
    </div>
    <div class="content">
        @RenderBody()

    </div>
    <br />
    <br />
    <br />
    <br />
    <br />

    <div class="footerPage">

        <div class="footerUpper">
            <ul>
                <li>CONTACT US</li>
                <br />
                <li><a href="https://www.facebook.com/PSITS.UCmain"><i class="fa-brands fa-square-facebook"></i> PSITS.UCmain</a></li>

                <li><i class="fa-solid fa-envelope"></i> <a href="https://mail.google.com/mail/u/1/?view=cm&to=psits.ccsmain@gmail.com">psits.ccsmain@gmail.com</a></li>
            </ul>
            <ul>
                <li>OUR SERVICE</li>
                <br />
                <li><a href="/PSITS">Announcements</a></li>
                <li><a href="/PSITS">Events</a></li>
                <li><a href="/PSITS@Merchandise">Merchandise</a></li>
            </ul>

        </div>

        <div class="footerLower">
            <br />
            <hr>
            <br />
            <p></p><a href="/PSITS@AboutUs" style="color: white;">PSITS&copy;2022 - Developed by PSITS OFFICERS and CO.</a></p>
        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
